<h1>Burger Time!</h1>

<h2>Burgers to Eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burgerName">
  </div>

  <div class="form-group">
    <label for="eaten">New Burger!</label><br>
    <input type="radio" name="eaten" value="0" checked> Not Eaten<br>
    <input type="radio" name="eaten" value="1"> Ate
  </div>

  <button type="submit">Add Burger</button>
</form>